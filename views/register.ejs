<% include ./partials/header.ejs %>


    <div class="row justify-content-center">
        <div class="col-md-12 order-md-1">
            <h3 class="text-center mb-3">Sign Up</h3>

            <form class="needs-validation" novalidate action="/register" method="POST">
                <!--
                First & Last Name
                -->
                <div class="row">
                    <!--
                    First Name
                    -->
                    <div class="col-md-6 mb-3">
                        <label for="firstName" >First name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" required autofocus>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <!--
                    Last Name
                    -->
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name" required>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>


                <!--
                Username
                -->
                <div class="mb-3">
                    <label for="username">Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                        <div class="invalid-feedback" style="width: 100%;">
                            Your username is required.
                        </div>
                    </div>
                </div>

                <!--
                Password
                -->
                <div class="mb-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <div class="invalid-feedback">
                        Your password is required.
                    </div>
                </div>

                <!--
                Email
                -->
                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
                    <div class="invalid-feedback">
                        Please enter a valid email address for future use.
                    </div>
                </div>

                <!--
                Avatar
                -->
                <div class="mb-3">
                    <label for="avatar">Avatar</label>
                    <input type="text" class="form-control" id="avatar" name="avatar" placeholder="Avatar URL" required>
                    <div class="invalid-feedback">
                        Please enter your avatar url.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="adminCode">Admin Code <span class="text-muted">(Optional)</span></label>
                    <!--
                    Admin User Role Authorization
                    -->
                    <input type="text" class="form-control" id="adminCode" name="adminCode" placeholder="Admin Code">
                    <div class="invalid-feedback">
                        Please enter your avatar url.
                    </div>
                </div>

                <button class="btn btn-primary btn-lg btn-block" type="submit">Sign Up</button>
            </form>
            <div class="mt-3 mb-3">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
