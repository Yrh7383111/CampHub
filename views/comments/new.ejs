<% include ../partials/header.ejs %>


    <div class="row justify-content-center">
        <div class="col-md-12 text-center mb-2">
            <h1>Add New Comment to <%= campground.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <!--
                    name="comment[text]" - "text" will be embedded inside "comment" variable (req.body.comment)
                    -->
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Write a comment for this campground..." rows="5"></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>


