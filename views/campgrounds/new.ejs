<% include ../partials/header.ejs %>


    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Campground</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <!--
            "/campgrounds" and "GET"
            needs to match: app.post("/campgrounds", function(req, res)

            Invoke "app.post("/campgrounds", function(req, res)"
            -->
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" name="image" id="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" id="price" placeholder="Price" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <!--
            Invoke "app.get("/campgrounds", function(req, res)"
            and then direct to "index.ejs"
            -->
            <div class="mb-3">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>


